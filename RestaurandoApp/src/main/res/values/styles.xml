<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FirstTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SecondTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="ThirdTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="FavoritesActivityTheme" parent="FirstTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FilterActivityTheme" parent="FirstTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SearchActivityTheme" parent="SecondTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:showDividers">end</item>
        <item name="android:divider">#90909090</item>
    </style>

    <style name="AddActivityTheme" parent="ThirdTheme.Base">
        <item name="android:background">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="YelpViewActivityTheme" parent="FirstTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Restaurando.Toolbar.Spinner"
           parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dropDownVerticalOffset">-56dp</item>
    </style>

    <style name="SearchViewStyle"
           parent="@android:style/Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- Dialog Styles !-->
    <style name="AlertDialogRemoveList" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@color/colorDarkTextCaptionDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorAccent">@color/colorDialogButton</item>
        <item name="android:textColorPrimary">@color/colorDialogText</item>
        <item name="android:windowTitleStyle">@style/TextDialogTitle</item>
    </style>
    
    <!-- Topography Styles !-->
    <style name="TextDisplayOne">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextTitle">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextEditTextTitle">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextSubheading">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextBodyOne">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextBodyTwo">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextCaption">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextButton" parent="android:Widget.Holo.Button.Borderless">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextDialogTitle">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
