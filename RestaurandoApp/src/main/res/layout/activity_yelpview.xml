<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar android:id="@+id/activity_yelpview_tool_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        app:titleTextAppearance="@style/TextEditTextTitle"
        app:titleTextColor="@color/colorWhite"
        app:subtitleTextAppearance="@style/TextSubheading"
        android:title="@string/app_name"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <include layout="@layout/activity_fragment_container"/>
</LinearLayout>