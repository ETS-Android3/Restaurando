<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_search_container"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:orientation="vertical"
    android:background="@drawable/selector_list_item_search"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/list_item_search_margin"
        android:layout_marginTop="@dimen/list_item_search_margin"
        android:layout_marginRight="@dimen/list_item_search_margin">
        <TextView android:id="@+id/list_item_search_restaurant_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="1"
            style="@style/TextSubheading"
            android:textColor="@color/colorDarkText"
            tools:text="Restaurant name" />
        <TextView android:id="@+id/list_item_search_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="end"
            style="@style/TextBodyOne"
            android:textColor="@color/colorDarkTextCaptionDark"
            tools:text="9.1"/>
        <ImageView android:id="@+id/list_item_search_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:contentDescription="@string/list_item_search_star_description"
            android:paddingTop="@dimen/list_item_search_star_padding_top"
            tools:src="@drawable/five_star"/>
    </LinearLayout>

    <TextView android:id="@+id/list_item_search_street_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_search_street_address_margin_left"
        android:layout_marginStart="@dimen/list_item_search_street_address_margin_left"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/TextBodyOne"
        android:textColor="@color/colorDarkTextCaptionDark"
        tools:text="222 Magnolia Drive"/>
    <TextView android:id="@+id/list_item_search_city_state_zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/list_item_search_city_state_zipcode_margin_left"
        android:layout_marginStart="@dimen/list_item_search_city_state_zipcode_margin_left"
        android:layout_marginBottom="@dimen/list_item_search_city_state_zipcode_margin_left"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        style="@style/TextBodyOne"
        android:textColor="@color/colorDarkTextCaptionDark"
        tools:text="San Francisco, CA 92122"/>


</LinearLayout>