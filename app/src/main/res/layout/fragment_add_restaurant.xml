<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/fragment_add_restaurant_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fragment_add_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="34sp"
            tools:text="Phuong Trang"/>
        <TextView
            android:id="@+id/fragment_add_restaurant_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/fragment_add_restaurant_name"
            android:layout_below="@id/fragment_add_restaurant_name"
            android:layout_marginBottom="8dp"
            tools:text="4.5"/>
        <TextView
            android:id="@+id/fragment_add_restaurant_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_add_restaurant_rating"
            tools:text="1450 reviews"
            android:layout_alignTop="@id/fragment_add_restaurant_rating"
            android:layout_marginLeft="36dp"/>
        <TextView
            android:id="@+id/fragment_add_restaurant_street_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_add_restaurant_rating"
            android:layout_alignLeft="@id/fragment_add_restaurant_name"
            tools:text="13125 Andrew Young International Boulevard"/>
        <TextView
            android:id="@+id/fragment_add_restaurant_city_state_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/fragment_add_restaurant_name"
            android:layout_below="@id/fragment_add_restaurant_street_address"
            android:layout_marginBottom="16dp"
            tools:text="Atlanta, GA 92138"/>
        <LinearLayout
            android:id="@+id/fragment_add_restaurant_implicit_activity_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/fragment_add_restaurant_city_state_zip"
            android:layout_marginBottom="16dp"
            android:weightSum="3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CALL"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DIRECTIONS"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="YELP"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fragment_add_restaurant_thoughts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_add_restaurant_implicit_activity_container"
            android:layout_alignLeft="@id/fragment_add_restaurant_name"
            android:layout_marginBottom="8dp"
            android:text="Thoughts:"/>
        <ImageButton
            android:id="@+id/fragment_add_restaurant_image_button_add_thoughts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fragment_add_restaurant_thoughts"
            android:layout_alignTop="@id/fragment_add_restaurant_thoughts"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:background="@android:color/transparent"
            android:src="@drawable/add_thought"/>
        <TableLayout
            android:id="@+id/fragment_add_restaurant_bulleted_list_thoughts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/fragment_add_restaurant_name"
            android:layout_below="@id/fragment_add_restaurant_thoughts"/>
    </RelativeLayout>
</LinearLayout>

