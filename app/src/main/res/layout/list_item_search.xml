<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_search_container"
    android:layout_width="match_parent"
    android:layout_height="106dp">


    <TextView
        android:id="@+id/list_item_search_restaurant_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorTextTitle"
        tools:text="Restaurant name" />
    <TextView
        android:id="@+id/list_item_search_street_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignLeft="@id/list_item_search_restaurant_name"
        android:layout_below="@id/list_item_search_restaurant_name"
        tools:text="222 Magnolia Drive"/>
    <TextView
        android:id="@+id/list_item_search_city_state_zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignLeft="@id/list_item_search_restaurant_name"
        android:layout_below="@id/list_item_search_street_address"
        android:paddingBottom="20dp"
        tools:text="San Francisco, CA 92122"/>
    <ImageView
        android:id="@+id/list_item_search_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/list_item_search_restaurant_name"
        android:paddingTop="4dp"
        android:layout_marginRight="16dp"
        tools:src="@drawable/five_star"/>
    <TextView
        android:id="@+id/list_item_search_rating"
        android:textSize="14sp"
        android:textColor="@color/colorTextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_item_search_restaurant_name"
        android:layout_toLeftOf="@id/list_item_search_star"
        android:paddingRight="4dp"
        tools:text="9.1"/>
    

</RelativeLayout>